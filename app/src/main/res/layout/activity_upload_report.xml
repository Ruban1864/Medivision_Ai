<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upload_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Upload Report"
        app:titleTextColor="@color/colorOnPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Report name input -->
    <EditText
        android:id="@+id/et_report_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Report Name"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/bg_edit_text"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary" />

    <!-- Progress bar (hidden by default) -->
    <ProgressBar
        android:id="@+id/progressBarUpload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <!-- Select PDF -->
    <Button
        android:id="@+id/btn_upload_pdf"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select PDF"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="12dp" />

    <!-- Capture Image -->
    <Button
        android:id="@+id/btn_capture_image"
        style="@style/Widget.App.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_marginBottom="12dp" />

    <!-- Analyze Report -->
    <Button
        android:id="@+id/btn_analyze"
        style="@style/Widget.App.Button.Success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analyze Report"
        android:layout_marginBottom="16dp" />

</LinearLayout>
